@article{Masera.2015,
 abstract = {Approximately 40{\%} of the global population relies on traditional bioenergy, accounting for 9{\%} of global energy use and 55{\%} of global wood harvest. However, knowledge about the environmental impacts of traditional bioenergy is fragmented. This review addresses several persistent questions and summarizes recent research on land cover change (LCC) and pollution emissions resulting from traditional bioenergy use. We also review recent studies analyzing transitions from traditional bioenergy to cleaner stoves and fuels.
