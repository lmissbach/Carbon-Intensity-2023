@article{Kallbekken.2011,
 abstract = {While strongly recommended by economists, it has often been politically difficult to impose taxes on externalities. There is a substantial literature on public attitudes towards environmental taxes. There has, however, been few comprehensive attempts to understand attitudes towards environmental taxes.
